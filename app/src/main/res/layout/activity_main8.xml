<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity8">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="@dimen/_141sdp"
        android:layout_height="@dimen/_98sdp"
        android:layout_marginTop="@dimen/_1sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/weeho"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="2dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="serif"
        android:text="Create your account"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSignup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:cardElevation="@dimen/_4sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewPhone"
        tools:ignore="ExtraText,MissingConstraints,NotSibling">

        <ImageView
            android:id="@+id/imageViewgmail"
            android:layout_width="@dimen/_31sdp"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingTop="@dimen/_2sdp"
            app:srcCompat="@drawable/message" />


        <EditText
            android:id="@+id/editTextTextEmailAddress3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="Email"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/_38sdp"
            android:background="@null"
            android:textColorHint="@color/black"
            android:inputType="textEmailAddress" />
    </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewPhone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_20sdp"
                app:cardElevation="@dimen/_4sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.531"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardViewSignupName"
                tools:ignore="ExtraText,MissingConstraints,NotSibling">

                <ImageView
                    android:id="@+id/imagePhone"
                    android:layout_width="@dimen/_31sdp"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingTop="@dimen/_2sdp"
                    app:srcCompat="@drawable/phone" />

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_42sdp"
                    android:layout_height="@dimen/_49sdp"
                    android:layout_marginLeft="@dimen/_38sdp"
                    android:background="@null"
                    app:cardBackgroundColor="@color/white"
                    tools:layout_editor_absoluteX="@dimen/_55sdp"
                    tools:layout_editor_absoluteY="@dimen/_274sdp">

                    <EditText
                        android:id="@+id/autoCompleteTextViewCountryCode1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:background="@null"
                        android:maxLength="3"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:text="+91 "
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toTopOf="@+id/imageView2"
                        app:layout_constraintEnd_toStartOf="@+id/cardView3"
                        app:layout_constraintHorizontal_bias="0.872"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="NotSibling" />
                </androidx.cardview.widget.CardView>
                <EditText
                    android:id="@+id/editTextphone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:hint="Phone number"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/_84sdp"
                    android:background="@null"
                    android:textColorHint="@color/black"
                    android:inputType="textEmailAddress" />
            </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSignupName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        tools:ignore="ExtraText,MissingConstraints,NotSibling">
        <ImageView
            android:id="@+id/imageViewname"
            android:layout_width="@dimen/_31sdp"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/_5sdp"
            app:srcCompat="@drawable/user" />
        <EditText
            android:id="@+id/editTextText3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Name"
            android:background="@null"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/_38sdp"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_15ssp"
            android:inputType="text"
           />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSignupPass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewSignup"
        tools:ignore="ExtraText,MissingConstraints,NotSibling">
        <ImageView
            android:id="@+id/imageViewpas"
            android:layout_width="@dimen/_31sdp"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/_5sdp"
            app:srcCompat="@drawable/padlock" />
        <EditText
            android:id="@+id/editTextTextPassword2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Password"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@null"
            android:paddingLeft="@dimen/_38sdp"
            android:ems="10"
            android:inputType="textPassword"/>
        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal|center_vertical|right"
            android:layout_marginHorizontal="@dimen/_10sdp"
            app:layout_constraintHorizontal_bias="0.4"/>
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSignupRePass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewSignupPass"
        tools:ignore="ExtraText,MissingConstraints,NotSibling">
        <ImageView
            android:id="@+id/imageViewRepass"
            android:layout_width="@dimen/_31sdp"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/_5sdp"
            app:srcCompat="@drawable/padlock" />
        <EditText
            android:id="@+id/editTextTextPassword3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Confirm Password"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:paddingLeft="@dimen/_38sdp"
            android:background="@null"
            android:ems="10"
            android:inputType="textPassword"/>
        <TextView
            android:id="@+id/showpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal|center_vertical|right"
            android:layout_marginHorizontal="@dimen/_10sdp"
            app:layout_constraintHorizontal_bias="0.4"/>
            />
    </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/button5"
                android:layout_width="@dimen/_142sdp"
                android:layout_height="@dimen/_42sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:backgroundTint="#F44336"
                android:text="Sign up"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/_20sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardViewSignupRePass" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>