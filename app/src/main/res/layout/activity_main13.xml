            <ImageView
                android:id="@+id/imageViewOccasion"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_2sdp"
                app:srcCompat="@drawable/ideaorange" />

            <EditText
                android:id="@+id/editTextNumberDecimal3"
                android:layout_width="@dimen/_229sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:ems="10"
                android:fontFamily="@font/average_sans"
                android:hint="Occasion or specify your event"
                android:inputType="text"
                android:paddingLeft="@dimen/_38sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="@dimen/_415sdp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/dateview"
            android:layout_width="@dimen/_229sdp"
            android:layout_height="@dimen/_38sdp"


            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_4sdp"
            app:layout_constraintBottom_toTopOf="@+id/cardView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView6"
            app:layout_constraintVertical_bias="0.5"
            tools:ignore="InvalidId,MissingConstraints">
            <ImageView
                android:id="@+id/imageViewDate"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_2sdp"
                app:srcCompat="@drawable/calendarorange" />
            <EditText
                android:id="@+id/dateEditText"
                android:layout_width="@dimen/_229sdp"
                android:layout_height="@dimen/_47sdp"
                android:fontFamily="@font/average_sans"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="Select Date"
                android:onClick="showDatePickerDialog"
                android:paddingLeft="@dimen/_38sdp"
                android:textColorHint="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/cardView7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView6"
                app:layout_constraintVertical_bias="0.5" />


        </androidx.cardview.widget.CardView>



        <!--  <com.google.android.material.bottomnavigation.BottomNavigationView-->
